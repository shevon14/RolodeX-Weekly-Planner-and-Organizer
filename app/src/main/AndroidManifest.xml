<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dell.rolodex">

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:label="RolodeX"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditPlanActivity"
            android:label="Edit Plan"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Edit_noteActivity"
            android:label="Edit Note"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".CalendarActivity"
            android:label="Calendar"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HelpActivity"
            android:label="Help"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AboutActivity"
            android:label="About"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OverviewActivity"
            android:label="Daily Overview"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SpecialNoteActivity"
            android:label="My Notes"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddPlanActivity"
            android:label="Add Plan"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Add_note_Activity"
            android:label="Add Note"
            android:screenOrientation="portrait" />

        <receiver android:name=".AlarmReceiverActivity" />
    </application>

</manifest>