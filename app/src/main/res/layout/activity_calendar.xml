<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalendarActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:text="Calendar View"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/colourOffWhite"
        android:textSize="25dp"
        android:layout_marginTop="5dp"
        android:id="@+id/dateview"/>

    <CalendarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colourOffWhite"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:id="@+id/calendarview">

    </CalendarView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Click on a date to Access your mobile planner"
        android:textAlignment="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/colorAccent"
        android:background="@color/colourOffWhite"
        android:layout_gravity="center_horizontal"
        android:id="@+id/MobileAcess" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Click here to return to the Add Plan page   "
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorPrimary"
        android:background="@color/colourWhite"
        android:layout_gravity="center_horizontal"
        android:id="@+id/CalendarAddPlan"/>


</LinearLayout>