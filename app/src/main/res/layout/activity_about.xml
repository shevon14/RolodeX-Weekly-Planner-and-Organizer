<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RolodeX\nVersion 1.1.4"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RolodeX - Weekly Planner and Organizer is the easiest way to plan and schedule your weekly events and work with
them. If you like to manage your mobile sound mode with your plans, this App is for you!"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you have any issues, improvement suggestions or feedback for RolodeX please contact me on
shevonrevinston@gmail.com or connect with us on https://www.facebook.com/RolodeX."
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="25dp"
        android:textSize="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_round"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

</LinearLayout>