<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPlanActivity"
    android:orientation="vertical">


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="           Type Your Description         "
            android:textColor="@color/colorPrimary"
            android:maxLength="30"
            android:inputType="text"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/txtdestype"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Which Days?"
        android:textStyle="normal"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp">

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        android:text="SUN"
        android:id="@+id/Sunday"
        android:textColor="@color/colourWhite"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/round_button"
        android:text="Mon"
        android:id="@+id/Monday"
        android:layout_toRightOf="@id/Sunday"
        android:textColor="@color/colourWhite"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        android:layout_marginLeft="5dp"
        android:text="tue"
        android:id="@+id/Tuesday"
        android:layout_toRightOf="@id/Monday"
        android:textColor="@color/colourWhite"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        android:layout_marginLeft="5dp"
        android:text="wed"
        android:id="@+id/Wednesday"
        android:layout_toRightOf="@id/Tuesday"
        android:textColor="@color/colourWhite"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        android:layout_marginLeft="5dp"
        android:text="thu"
        android:layout_toRightOf="@id/Wednesday"
        android:id="@+id/Thursay"
        android:textColor="@color/colourWhite"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        android:layout_marginLeft="5dp"
        android:text="fri"
        android:id="@+id/Friday"
        android:layout_toRightOf="@id/Thursay"
        android:textColor="@color/colourWhite"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/round_button"
        android:text="Sat"
        android:id="@+id/Saturday"
        android:layout_toRightOf="@id/Friday"
        android:textColor="@color/colourWhite"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What Time?"
        android:textStyle="normal"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timepicker"
        android:timePickerMode="spinner"
        android:background="@color/colourWhite"
        android:numbersTextColor="@color/colorAccent"
        android:layout_gravity="center_horizontal"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mobile Sound Mode?"
        android:textStyle="normal"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/soundmode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sound"
            android:textAlignment="center"
            android:textColor="@color/colourWhite"
            android:background="@drawable/round_button"/>

        <Button
            android:id="@+id/vibratemode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/soundmode"
            android:layout_marginLeft="10dp"
            android:text="Vibrate"
            android:textAlignment="center"
            android:textColor="@color/colourWhite"
            android:background="@drawable/round_button"/>

        <Button
            android:id="@+id/Silentmode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/vibratemode"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_button"
            android:text="Silent"
            android:textAlignment="center"
            android:textColor="@color/colourWhite" />

    </RelativeLayout>

</LinearLayout>
